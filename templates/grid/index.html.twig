{% extends 'base.html.twig' %}

{% block title %}Hello CompetitionController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">
        {% for group in groups %}
            <div>
                Group {{ group.getName() }}
                <table>
                    {% for team in group.getTeams() %}
                        <tr>
                            <td>{{ team.getName() }}</td>
                            {% for play in team.getPlays() %}
                                {% if (play.getTeam().getId()==play.getOpponent().getId()) %}
                                    <td style="color: black"></td>
                                {% else %}
                                    <td>{{ play.getScoredGoals() }}:{{ play.getLostGoals() }}</td>
                                {% endif %}
                            {% endfor %}
                        </tr>
                        {# <tr> #}
                        {# <td>{% team.getName() %}</td> #}
                        {# </tr> #}
                    {% endfor %}
                    {# {% for team in group.getTeams() %} #}
                    {# <tr> #}
                    {# <td>{% team.getName() %}</td> #}
                    {# </tr> #}
                    {# {% endfor %} #}
                </table>
            </div>
        {% endfor %}
    </div>
{% endblock %}
