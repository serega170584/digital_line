{% extends 'base.html.twig' %}

{% block title %}Hello CompetitionController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">
        {% for stage in stages %}
            <ul style="display: inline-block; list-style: none; padding-left: 0">
                <li style="vertical-align: top;">
                    {{ stage.getName }}
                    <ul style="list-style: none; display: block; padding-left: 0; margin-right: 40px">
                        {% for play in stage.getPlays() %}
                            <li>
                                <ul style="display: inline-block; list-style: none; padding-left: 0">
                                    <li>
                                        <ul style="list-style: none; padding-left: 0">
                                            <li>{{ play.getTeam().getName() }}</li>
                                            <li>{{ play.getOpponent().getName() }}</li>
                                        </ul>
                                    </li>
                                    <li>{{ play.getScoredGoals() }} : {{ play.getLostGoals() }}</li>
                                </ul>
                            </li>
                        {% endfor %}
                    </ul>
                </li>
            </ul>
        {% endfor %}
    </div>
{% endblock %}
